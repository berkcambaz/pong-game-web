{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": true,
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "rootDir": "..",
    "outDir": "public",
    "downlevelIteration": true, // To allow ...Int8Array 
  },
  "include": [
    "src/**/*",
    "../shared"
  ]
}